{
  "manifest_version": 3,
  "name": "Evidence Corroborator",
  "version": "1.0",
  "description": "Highlights text, queries Gemini for corroborating evidence, and displays the results inline.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.yourgeminiendpoint.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Check Evidence"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
